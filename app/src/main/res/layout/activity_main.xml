<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#EEF0A5"
    tools:context=".MainActivity">

    <TextView
        android:textColor="#000000"
        android:textSize="18sp"
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/add_new_session"
        android:text="@string/addButtonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/results_button"
        android:padding="5dp"
        android:textSize="24sp"
        android:onClick="addSessionOnClick"/>

    <Button
        android:id="@+id/results_button"
        android:text="@string/resultsButtonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:onClick="showResults"/>

</RelativeLayout>
